@model Restaurant.Areas.Admin.ViewModels.MasterServiceViewModel

@{
    ViewData["Title"] = "Edit";
}

<div class="pagetitle">
    <h2>MasterService</h2>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="MasterService">MasterService</a></li>
            <li class="breadcrumb-item active">Edit</li>
        </ol>
    </nav>
</div>

<div class="row">
    <div class="col-md-4">
